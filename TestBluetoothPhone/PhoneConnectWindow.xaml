<Window x:Class="TestBluetoothPhone.PhoneConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PhoneConnectWindow" Width="400" Height="120">
    <StackPanel Orientation="Vertical">
        <Label Content="{Binding Name}" Width="100" Height="25" VerticalAlignment="Center" />
        <Label Content="{Binding PhoneNumbers}" Width="120" Height="25" VerticalAlignment="Center" />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="accept" Width="100" Margin="0,0,5,0" Command="{Binding AcceptCommand}"/>
            <Button Content="terminate" Width="100" Command="{Binding TerminateCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
